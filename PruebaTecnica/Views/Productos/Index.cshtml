@model List<PruebaTecnica.Models.Producto>

@{
    ViewData["Title"] = "Lista de Productos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <h1>Lista de Productos</h1>

    <table class="tabla-productos">
        <thead>
            <tr>
                <th>ID</th>
                <th>Nombre</th>
                <th>Precio</th>
                <th>Descripción</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var producto in Model)
            {
                <tr>
                    <td>@producto.Id</td>
                    <td>@producto.Nombre</td>
                    <td>@producto.PrecioUnitario.ToString("C")</td>
                    <td>@producto.Descripcion</td>
                    <td class="acciones">
                        <a asp-action="Edit" asp-route-id="@producto.Id" class="btn btn-primary">Editar</a>
                        <a asp-action="Delete" asp-route-id="@producto.Id" class="btn btn-danger">Eliminar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <div style="text-align: center; margin-top: 30px;">
        <a asp-action="Create" class="btn btn-success">➕ Nuevo Producto</a>
    </div>
</div>